<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_goodsimport_document">
    <t t-call="report.internal_layout">
        <div class="page">
            <div class="oe_structure"/>
            <h2>Dossier Importation N° : <span t-field="o.name"/></h2>
            <br></br>
            <div class="row mt32 mb32">
                <table class="table table-condensed">
                    <thead>
                        <tr class="border-black">
                            <th><strong>Fournisseur</strong></th>
                            <th><strong>Date de création</strong></th>
                            <th><strong>Date d’entrée</strong></th>
                            <th><strong>Engagement d’Importation</strong></th>
                            <th><strong>N° de domiciliation</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-black">
                            <td>
                                <span t-field="o.partner_id.name"/>
                            </td>
                            <td>
                                <span t-field="o.date"/>
                            </td>
                            <td>
                                <span t-field="o.entry_date"/>
                            </td>
                            <td>
                                <span t-field="o.import_engagement"/>
                            </td>
                            <td>
                                <span t-field="o.domiciliation_number"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="row mt32 mb32">
                <table class="table table-condensed">
                    <thead>
                        <tr class="border-black">
                            <th><strong>N° DUM</strong></th>
                            <th><strong>Date DUM</strong></th>
                            <th><strong>Cours de devise de la DUM</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-black">
                            <td>
                                <span t-field="o.export_declaration"/>
                            </td>
                            <td>
                                <span t-field="o.date_export_declaration"/>
                            </td>
                            <td>
                                <span t-field="o.currency_rate"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="row mt32 mb32">
                <table class="table table-condensed">
                    <thead>
                        <tr class="border-black">
                            <th><strong>N° de quittance</strong></th>
                            <th><strong>Numéro certificat d’assurance maritime</strong></th>
                            <th><strong>Montant Frais Bancaire</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-black">
                            <td>
                                <span t-field="o.receipt_number"/>
                            </td>
                            <td>
                                <span t-field="o.certificate_marine_insurance_number"/>
                            </td>
                            <td>
                                <span t-field="o.amount_bank_charges"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td>Valeur d'importation</td>
                            <td class="text-right">
                                <strong><span t-field="o.import_amount"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/></strong>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td>Charges douanière</td>
                            <td class="text-right">
                                <strong><span t-field="o.amount_customs_charges"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/></strong>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td>Charges sur l’importation</td>
                            <td class="text-right">
                                <strong><span t-field="o.amount_import_charges"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/></strong>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td>Total du dossier</td>
                            <td class="text-right">
                                <strong><span t-field="o.amount_total"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/></strong>
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
            <div class="oe_structure"/>
        </div>
    </t>
    <t t-call="report.internal_layout">
        <div class="page">
            <div class="oe_structure"/>
            <h2>Réceptions</h2>
            <br></br>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Référence</strong></th>
                        <th><strong>Fournisseur</strong></th>
                        <th><strong>Origine du document</strong></th>
                        <th><strong>Status</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.picking_ids" t-as="picking">
                        <td>
                            <span t-field="picking.name"/>
                        </td>
                        <td>
                            <span t-field="picking.partner_id.name"/>
                        </td>
                        <td>
                            <span t-field="picking.origin"/>
                        </td>
                        <td>
                            <span t-field="picking.state"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="oe_structure"/>
        </div>
    </t>
    <t t-call="report.internal_layout">
        <div class="page">
            <div class="oe_structure"/>
            <h2>Factures</h2>
            <br></br>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Fournisseur</strong></th>
                        <th><strong>Date de facture</strong></th>
                        <th><strong>Numéro de facture</strong></th>
                        <th><strong>Date d'échéance</strong></th>
                        <th><strong>Origine Document</strong></th>
                        <th><strong>Devise</strong></th>
                        <th><strong>Total</strong></th>
                        <th><strong>Status</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.invoice_ids" t-as="inv">
                        <td>
                            <span t-field="inv.partner_id.name"/>
                        </td>
                        <td>
                            <span t-field="inv.date_invoice"/>
                        </td>

                        <td>
                            <span t-field="inv.number"/>
                        </td>
                        <td>
                            <span t-field="inv.date_due"/>
                        </td>
                        <td>
                            <span t-field="inv.origin"/>
                        </td>
                        <td>
                            <span t-field="inv.currency_id.name"/>
                        </td>
                        <td>
                            <span t-field="inv.amount_total"/>
                        </td>
                        <td>
                            <span t-field="inv.state"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="oe_structure"/>
        </div>
    </t>
    <t t-call="report.internal_layout">
        <div class="page">
            <div class="oe_structure"/>
            <h2>Coefficients d'import</h2>
            <br></br>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Article</strong></th>
                        <th><strong>coefficient d'importation</strong></th>
                        <th><strong>PR Import</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.product_coef_ids" t-as="coef">
                        <td>
                            <span t-field="coef.product_id.name"/>
                        </td>
                        <td>
                            <span t-field="coef.import_coef"/>
                        </td>
                        <td>
                            <span t-field="coef.product_cost"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="oe_structure"/>
        </div>
    </t>

</template>

<template id="goodsimport">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'goods_import.report_goodsimport_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>

