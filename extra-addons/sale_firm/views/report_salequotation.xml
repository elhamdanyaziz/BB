<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <template id="report_salequotation_document">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-6">
                        <strong>Client:</strong>
                        <div t-field="o.partner_id" t-field-options='{"widget": "contact", "fields": ["name","customer_code"]}'/>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                        <strong t-if="o.partner_shipping != o.partner_invoice">Invoice address:</strong>
                        <div>
                            <span t-field="o.partner_id.street"/><br/>
                            <span t-field="o.partner_id.city_id.name"/><br/>
                            <span t-field="o.partner_id.zip"/><br/>
                            <span t-field="o.partner_id.country_id.name"/>
                        </div>
                        <div t-if="o.partner_shipping" class="mt8">
                            <strong>Shipping address:</strong>
                            <div t-field="o.partner_shipping"/>
                        </div>

                    </div>
                </div>

                <h2>
                    <span t-if="o.is_order">Order N° </span>
                    <span t-if="o.is_quotation">Quotation N° </span>
                    <span t-field="o.name"/>
                </h2>

                <div class="row mt32 mb32" id="informations">
                    <!--<div class="col-xs-3">-->
                        <!--<strong>Your Reference:</strong>-->
                        <!--<p t-field="o.client_order_ref"/>-->
                    <!--</div>-->
                    <div class="col-xs-3">
                        <strong t-if="o.is_order">Date Ordered:</strong>
                        <strong t-if="o.is_quotation">Quotation Date:</strong>
                        <!--<p t-field="o.date_order"/>-->
                        <br/>
                        <span t-field="o.date_order" t-field-options='{"format": "d/M/Y"}'/>
                    </div>
                    <div t-if="o.opp_id" class="col-xs-3">
                        <strong>Opportunité:</strong>
                        <p t-field="o.opp_id.code"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>KAM:</strong>
                        <p t-field="o.user_id.name"/>
                        <p t-field="o.user_id.partner_id.phone"/>
                        <p t-field="o.user_id.partner_id.email"/>
                        <span t-field="o.user_id.partner_id.street"/>
                        <span t-field="o.user_id.partner_id.city_id.name"/>
                        <span t-field="o.user_id.partner_id.zip"/>
                        <span t-field="o.user_id.partner_id.country_id.name"/>
                    </div>
                    <div  class="col-xs-3">
                        <strong>Référence/description:</strong>
                        <p t-field="o.client_order_ref"/>
                    </div>
                </div>

                <t t-set="product_category" t-value="[]"/>
                <t t-foreach="o.order_line" t-as="l">
                    <t t-set="product_category" t-value="product_category+[l.product_id.categ_id]"/>
                </t>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <!--<th>Famille</th>-->
                            <th width="30%" class="th">Description</th>
                            <th width="20" class="th">Article</th>
                            <th width="10" class="th">Quantité</th>
                            <th width="12" class="th">Prix Unitaire</th>
                            <th width="15" class="th">Montant HT</th>
                            <th width="5%" class="th">Délai(Semaine)</th>
                        </tr>
                   </thead>
                   <tbody class="order_line">
                       <t t-foreach="set(product_category)" t-as="category">
                           <tr>
                               <!--<td>-->
                                   <!--<span t-field="category.name"/>-->
                               <!--</td>-->
                               <td width="30%" class="td">
                                   <span t-field="category.description"/>
                                </td>
                           </tr>
                            <tr t-foreach="o.order_line" t-as="l">
                                <t t-if="category.id==l.product_id.categ_id.id">
                                    <!--<td>-->
                                    <!--</td>-->
                                    <td width="80" class="td">
                                    </td>
                                    <td width="20" class="td">
                                       <span t-field="l.product_id.name"/>
                                    </td>
                                    <td class="td text-right" width="10" >
                                        <span t-field="l.product_uom_qty"/>
                                        <span groups="product.group_uom" t-field="l.product_uom"/>
                                    </td>
                                    <td class="td text-right" width="12">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td class="td text-right" width="15">
                                        <span t-field="l.price_subtotal"/>
                                    </td>
                                    <td width="5%" class="td text-right">
                                       <span t-field="l.picking_delay"/>
                                    </td>
                                </t>
                            </tr>
                       </t>
                   </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Montant HT</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr t-if="o.global_discount != 0">
                                <td><strong>Remise <span t-esc="o.amount_discount_ongoing" />%</strong></td>
                                <td class="text-right">
                                    <span t-field="o.global_discount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>TVA à 20%</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Net à Payer</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_total"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <span>Nos conditions générales de vente s’appliquent selon le détail en annexe</span>
                <br/><br/><br/>
                <p>
                    <strong>Conditions de paiement:</strong>
                    <span t-field="o.payment_condition"/>
                </p>
                <p>
                    <strong>Echéance:</strong>
                    <span t-field="o.payment_term"/>
                </p>
                <p t-if="o.is_quotation">
                    <strong>Validité de l’offre:</strong>
                    <span t-field="o.validity_offer"/>
                </p>
                <p t-if="o.with_deposit">
                    <t t-set="comment" t-value="o.deposit_number*100"/>
                    <strong>Note:</strong>
                    <span t-field="o.note"/>
                    <br/>
                    Acompte à la commande de <span t-esc="comment"/> %
                </p>
                <p t-if="not o.with_deposit">
                    <strong>Note:</strong>
                    <span t-field="o.note"/>
                </p>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="sale_firm.report_salequotation">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'sale_firm.report_salequotation_document')"/>
            </t>
        </t>
    </template>

    <report
            id="report_sale_quotation"
            string="Devis/Bon de Commande avec Groupement"
            model="sale.order"
            report_type="qweb-pdf"
            file="sale_firm.report_salequotation"
            name="sale_firm.report_salequotation"
        />

</data>
</openerp>
