<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <template id="sale.report_saleorder_document">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-6">
                        <strong>Client:</strong>
                        <div t-field="o.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;name&quot;,&quot;customer_code&quot;]}"/>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                        <!--<strong t-if="o.partner_shipping_id == o.partner_invoice_id">Invoice and shipping address:</strong>-->
                        <!--<strong t-if="o.partner_shipping_id != o.partner_invoice_id">Invoice address:</strong>-->
                        <!--<strong t-if="o.partner_shipping == o.partner_invoice">Invoice and shipping address:</strong>-->
                        <strong t-if="o.partner_shipping != o.partner_invoice">Invoice address:</strong>
                        <!--<div t-field="o.partner_id" t-field-options='{"widget": "contact", "fields": ["address","city_id"], "no_marker": true}' />-->
                        <div>
                            <span t-field="o.partner_id.street"/><br/>
                            <span t-field="o.partner_id.city_id.name"/><br/>
                            <span t-field="o.partner_id.zip"/><br/>
                            <span t-field="o.partner_id.country_id.name"/>
                        </div>
                        <!--<p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>-->
                        <!--<div t-if="o.partner_shipping_id != o.partner_invoice_id" class="mt8">-->
                            <!--<strong>Shipping address:</strong>-->
                            <!--<div t-field="o.partner_shipping_id" t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>-->
                            <!--<p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>-->
                        <!--</div>    -->
                        <div t-if="o.partner_shipping" class="mt8">
                            <strong>Shipping address:</strong>
                            <div t-field="o.partner_shipping"/>
                        </div>

                    </div>
                </div>

                <h2>
                    <span t-if="o.is_order">Order N° </span>
                    <span t-if="o.is_quotation">Quotation N° </span>
                    <span t-field="o.name"/>
                </h2>

                <div class="row mt32 mb32" id="informations">
                    <!--<div t-if="o.client_order_ref" class="col-xs-3">-->
                        <!--<strong>Your Reference:</strong>-->
                        <!--<p t-field="o.client_order_ref"/>-->
                    <!--</div>-->
                    <div t-if="o.date_order" class="col-xs-3">
                        <strong t-if="o.is_order">Date Ordered:</strong>
                        <strong t-if="o.is_quotation">Quotation Date:</strong>
                        <!--<p t-field="o.date_order"/>-->
                        <br/>
                        <span t-field="o.date_order" t-field-options="{&quot;format&quot;: &quot;d/M/Y&quot;}"/>
                    </div>
                    <div t-if="o.opp_id" class="col-xs-3">
                        <strong>Opportunité:</strong>
                        <p t-field="o.opp_id.code"/>
                    </div>
                    <div t-if="o.user_id.name" class="col-xs-3">
                        <strong>KAM:</strong>
                        <p t-field="o.user_id.name"/>
                        <p t-field="o.user_id.partner_id.phone"/>
                        <p t-field="o.user_id.partner_id.email"/>
                        <span t-field="o.user_id.partner_id.street"/>
                        <span t-field="o.user_id.partner_id.city_id.name"/>
                        <span t-field="o.user_id.partner_id.zip"/>
                        <span t-field="o.user_id.partner_id.country_id.name"/>
                    </div>
                    <div t-if="o.client_order_ref" class="col-xs-3">
                        <strong>Référence/description:</strong>
                        <p t-field="o.client_order_ref"/>
                    </div>
                    <!--<div t-if="o.payment_term" class="col-xs-3">-->
                        <!--<strong>Payment Term:</strong>-->
                        <!--<p t-field="o.payment_term"/>-->
                    <!--</div>-->
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th width="20" class="th">Article</th>
                            <th width="30%" class="th">Description</th>
                            <th width="10" class="th">Quantité</th>
                            <th width="12" class="th">Prix Unitaire</th>
                            <th width="15" class="th">Montant HT</th>
                            <th  width="5%" class="th">Délai(Semaine)</th>

                        </tr>
                   </thead>
                   <tbody class="order_line">
                        <tr t-foreach="o.order_line" t-as="l">
                            <td width="20" class="td">
                               <span t-field="l.product_id.name"/>
                            </td>
                            <td width="30%" class="td">
                               <span t-field="l.name"/>
                            </td>
                            <td class="td text-right" width="10">
                                <span t-field="l.product_uom_qty"/>
                                <span groups="product.group_uom" t-field="l.product_uom"/>
                            </td>
                            <td class="td text-right" width="12">
                                <span t-field="l.price_unit"/>
                            </td>
                            <td class="td text-right" width="15">
                                <!--<span t-field="l.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>-->
                                <span t-field="l.price_subtotal"/>
                            </td>
                            <td width="5%" class="td text-right">
                               <span t-field="l.picking_delay"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Montant HT</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                </td>
                            </tr>
                            <tr t-if="o.global_discount != 0">
                                <td><strong>Remise <span t-esc="o.amount_discount_ongoing" />%</strong></td>
                                <td class="text-right">
                                    <span t-field="o.global_discount" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>TVA à 20%</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Net à Payer</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!--<p t-field="o.note" />-->
                <span>Nos conditions générales de vente s’appliquent selon le détail en annexe</span>
                <br/><br/><br/>
                <p>
                    <strong>Conditions de paiement:</strong>
                    <span t-field="o.payment_condition"/>
                </p>
                <p>
                    <strong>Echéance:</strong>
                    <span t-field="o.payment_term"/>
                </p>
                <p t-if="o.is_quotation">
                    <strong>Validité de l’offre:</strong>
                    <span t-field="o.validity_offer"/>
                </p>
                <p t-if="o.with_deposit">
                    <t t-set="comment" t-value="o.deposit_number*100"/>
                    <strong>Note:</strong>
                    <span t-field="o.note"/>
                    <br/>
                    Acompte à la commande de <span t-esc="comment"/> %
                </p>
                <p t-if="not o.with_deposit">
                    <strong>Note:</strong>
                    <span t-field="o.note"/>
                </p>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="sale.report_saleorder">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'sale.report_saleorder_document')"/>
            </t>
        </t>
    </template>

</data>
</openerp>
