        <record model="ir.ui.view" id="view_sales_order_filter_inherit1">
            <field name="name">sale.order.list.select.inherit1</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='sales']" position="after">
                    <filter string="À Valider" name="validated" domain="[('state','=','confirmed')]"/>
                    <filter string="À Approuver" name="approved" domain="[('state','=','validated')]"/>
                    <filter string="Archivé" name="archived" domain="[('state','=','archived')]"/>
                    <filter string="Non Archivé" name="notarchived" domain="[('state','!=','archived')]"/>
                    <filter string="Non Soldé" name="notsolded" domain="[('state','!=','archived'),('is_solded','=',False)]"/>
                    <filter string="Soldé" name="solded" domain="[('state','!=','archived'),('is_solded','=',True)]"/>
                </xpath>
            </field>
        </record>

		<record id="sale.action_orders" model="ir.actions.act_window">
            <field name="name">Bons de commande</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="search_view_id" ref="sale.view_sales_order_filter"/>
            <field name="context">{'readonly_by_pass': True,'search_default_my_sale_orders_filter': 1,'default_is_order': 1,'default_is_quotation':0,'default_state':'draft'}</field>
            <!--<field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel'))]</field>-->
			<field name="domain">[('is_order', '=',True)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a quotation that can be converted into a sales
                    order.
                </p><p>
                    Odoo will help you efficiently handle the complete sales flow:
                    quotation, sales order, delivery, invoicing and payment.
                </p>
            </field>
        </record>

		<record id="sale.action_quotations" model="ir.actions.act_window">
            <field name="name">Devis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="sale.view_quotation_tree"/>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="context">{'readonly_by_pass': True,'search_default_notsolded': 1,'search_default_my_sale_orders_filter': 1,'default_is_quotation':1,'default_is_order':0,'default_state':'draft'}</field>
            <!--<field name="domain">[('state','in',('draft','sent','cancel'))]</field>-->
			<field name="domain">[('is_quotation', '=',True)]</field>
            <field name="search_view_id" ref="sale.view_sales_order_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a quotation, the first step of a new sale.
              </p><p>
                Odoo will help you handle efficiently the complete sale flow:
                from the quotation to the sales order, the
                delivery, the invoicing and the payment collection.
              </p><p>
                The social feature helps you organize discussions on each sales
                order, and allow your customers to keep track of the evolution
                of the sales order.
              </p>
            </field>
        </record>

        <record id="act_wait_confirmed_quotation" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">wait_confirmed_quotation</field>
            <field name="kind">function</field>
            <field name="action">action_wait_confirmed_quotation()</field>
            <field name="split_mode">OR</field>
        </record>

        <record id="act_confirmed" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">confirmed</field>
            <field name="kind">function</field>
            <field name="action">action_confirmed()</field>
        </record>

        <record id="act_wait_validated_quotation" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">wait_validated_quotation</field>
            <field name="kind">function</field>
            <field name="action">action_wait_validated_quotation()</field>
            <field name="split_mode">OR</field>
        </record>

        <record id="act_validated" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">validated</field>
            <field name="kind">function</field>
            <field name="action">action_validated()</field>
        </record>

        <record id="act_approved" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">approved</field>
            <field name="kind">function</field>
            <field name="action">action_approved()</field>
        </record>

        <record id="trans_draft_wait_confirmed" model="workflow.transition">
            <field name="act_from" ref="sale.act_draft"/>
            <field name="act_to" ref="act_wait_confirmed_quotation"/>
            <field name="signal">wait_confirmed_quotation</field>
        </record>

        <record id="trans_wait_confirmed_quotation_approved" model="workflow.transition">
            <field name="act_from" ref="act_wait_confirmed_quotation"/>
            <field name="act_to" ref="act_approved"/>
            <field name="condition">amount_untaxed &lt;= 5000</field>
        </record>

        <record id="trans_wait_confirmed_quotation_confirmed" model="workflow.transition">
            <field name="act_from" ref="act_wait_confirmed_quotation"/>
            <field name="act_to" ref="act_confirmed"/>
            <field name="condition">amount_untaxed &gt;= 5000</field>
        </record>

        <record id="trans_confirmed_wait_validated_quotation" model="workflow.transition">
            <field name="act_from" ref="act_confirmed"/>
            <field name="act_to" ref="act_wait_validated_quotation"/>
            <field name="signal">wait_validated_quotation</field>
        </record>

        <record id="trans_wait_validated_quotation_validated" model="workflow.transition">
            <field name="act_from" ref="act_wait_validated_quotation"/>
            <field name="act_to" ref="act_validated"/>
            <field name="condition">amount_untaxed &gt;= 10000</field>
        </record>


        <record id="trans_wait_validated_quotation_approved" model="workflow.transition">
            <field name="act_from" ref="act_wait_validated_quotation"/>
            <field name="act_to" ref="act_approved"/>
            <field name="condition">amount_untaxed &lt;= 10000</field>
        </record>

        <record id="trans_act_validated_approved" model="workflow.transition">
            <field name="act_from" ref="act_validated"/>
            <field name="act_to" ref="act_approved"/>
            <field name="signal">quotation_approved</field>
        </record>

        <record id="sale.act_sent" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">sent</field>
            <field name="kind">function</field>
            <field name="action">action_sent()</field>
        </record>

        <record id="view_validation_sale_configuration" model="ir.ui.view">
            <field name="name">Sale Application</field>
            <field name="model">sale.config.settings</field>
            <field name="inherit_id" ref="sale.view_sales_config"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='module_sale_margin']" position="after">
                    <div name="module_sale_validation">
                        <field name="module_sale_validation" class="oe_inline"/>
                        <label for="module_sale_validation"/>
                        <group>
                            <field name="limit_amount_cd" attrs="{'required': [('module_sale_validation','=',True)],'invisible': [('module_sale_validation','!=',True)]}" class="oe_inline"/>
                            <field name="limit_amount_gm" attrs="{'required': [('module_sale_validation','=',True)],'invisible': [('module_sale_validation','!=',True)]}" class="oe_inline"/>
                        </group>
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_category_form_view_inherit1">
            <field name="name">product.category.inherit1</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="stock_account.view_category_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_stock_journal']" position="after">
					<field name="description"/>
                    <field name="english_description"/>
                </xpath>
            </field>
        </record>


	</data>
</openerp>