<openerp>
	<data>

		<record model="ir.ui.view" id="view_order_form_inherit2">
            <field name="name">sale.order.form.inherit2</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="is_quotation" invisible="1"/>
					<field name="is_order" invisible="1"/>
                </xpath>

				<!--<xpath expr="//button[@name='print_quotation']" position="after">-->
                    <!--<button name="action_button_confirmed" string="Confirmer Devis" type="object" class="oe_highlight" attrs="{'invisible': ['|',('is_order', '=',True),('state', '!=','draft')]}"  groups=""/>-->
                    <!--<button name="action_button_validate" states='confirmed' string="Valider Devis" type="object" class="oe_highlight"   groups=""/>-->
                    <!--<button name="quotation_approved" states='validated' string="Approuver Devis"  type="workflow" class="oe_highlight"   groups=""/>-->
                    <!--&lt;!&ndash;<button name="action_create_sale_order" string="Générer un un BC" type="object" class="oe_highlight"  attrs="{'invisible': ['|',('is_order', '=',True),('state', '=','draft')]}" groups=""/>&ndash;&gt;-->
