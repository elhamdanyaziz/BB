        <record id="crm_case_form_view_oppor_inherit" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="replace">

                </xpath>
                <xpath expr="//label[@for='name']" position="replace">
                    <label for="name" string="Nom du Projet" class="oe_edit_only"/>
                </xpath>
                <xpath expr="//label[@for='name']" position="before">
                    <label for="code" string="Code du Projet" class="oe_edit_only"/>
                    <h1><field name="code"/></h1>
                </xpath>
                <xpath expr="//label[@for='planned_revenue']" position="replace">
                    <label for="planned_revenue" string="Montant d'affaire estimé" class="oe_edit_only"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='email_from']" position="replace">
                    <field name="email_from" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='phone']" position="replace">
                    <field name="phone" invisible="1"/>
                    <field name="section_id" string="BU"/>
                    <field name="lead_type_id"/>
                    <field name="stage_id" invisible="1"/>
                    <field name="state" string="Statut"/>
                    <field name="spinneret_id"/>
                    <field name="job_id"/>
                    <field name="owner_id"/>
                    <field name="office_study_id" string="Bureau d'Étude"/>
                    <field name="city_id"/>
                    <field name="tender_number" invisible="1"/>
                    <field name="market_number"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="replace">
                    <field name="user_id" string="KAM"/>
                    <field name="id" string="ID base" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='priority']" position="after">
                    <group name="favorite_quotation" colspan="2" col="4">
                        <field name="quotation_id" domain="[('is_quotation','=',True),('opp_id', '=',id)]"/>
                        <field name="partner_id" nolabel="1"/>
                        <field name="quotation_amount" nolabel="1"/>
                    </group>
                    <field name="max_quotations"/>
                    <field name="total_orders"/>
                </xpath>

                <xpath expr="//div[@groups='base.group_multi_salesteams']" position="replace">

                </xpath>
                <xpath expr="//label[@for='section_id']" position="replace">
                    <label for="section_id"  groups="base.group_multi_salesteams" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="before">
                    <field name="date"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="replace">
                    <field name="date_deadline" string="Date d'échéance"/>
                </xpath>
                <xpath expr="//field[@name='categ_ids']" position="replace">
                    <field name="categ_ids" widget="many2many_tags" context="{'object_name': 'crm.lead'}" invisible="1"/>
                </xpath>
                <xpath expr="//page[@string='Lead']" position="after">
                    <page string="Devis">
                        <field name="quotations_ids" nolabel="1" readonly="1">
                            <tree editable="bottom">
                                <field name="name" string="N° Devis"/>
                                <field name="partner_id"/>
                                <field name="date_order"/>
                                <field name="user_id" string="KAM"/>
                                <!--<field name="section_id" string="Département"/>-->
                                <field name="payment_condition" />
                                <field name="payment_term"/>
                                <field name="amount_untaxed_with_discount"/>
                                <field name="amount_total"/>
                                <field name="state1"/>
                                <field name="state" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Bons de commande">
                        <field name="order_ids" nolabel="1" readonly="1">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="date_order"/>
                                <field name="user_id" string="KAM"/>
                                <!--<field name="section_id" string="Département"/>-->
                                <field name="payment_condition" />
                                <field name="payment_term"/>
                                <field name="amount_untaxed"/>
                                <field name="amount_total"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Livraisons">
                        <!--<field name="move_lines" nolabel="1">-->
                            <!--<tree string="Products" editable="bottom">-->
                                <!--<field name="removal_id" />-->
                                <!--<field name="product_id" />-->
                                <!--<field name="product_uom_qty" />-->
                                <!--<field name="state" />-->
                            <!--</tree>-->
                        <!--</field>-->
                        <field name="picking_ids" nolabel="1" readonly="1"/>
                    </page>
                </xpath>

                <xpath expr="//page[@string='Lead']" position="replace">
                </xpath>

                <xpath expr="//field[@name='priority']" position="replace">
                    <field name="priority" widget="priority" invisible="1"/>
                </xpath>

            </field>
        </record>

