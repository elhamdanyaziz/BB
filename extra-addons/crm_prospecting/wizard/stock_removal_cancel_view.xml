<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
     
		<record model="ir.ui.view" id="stock_removal_cancel_form">
	        <field name="name">stock.removal.cancel.form</field>
	        <field name="model">stock.removal.cancel</field>
	        <field name="type">form</field>
	        <field name="arch" type="xml">
	        	<form string="Rservation">
					<group>
						<field name="type_action"/>
						<field name="action1" attrs="{'invisible':[('filter','not in',('draft','validated','approuved'))]}"/>
						<field name="action2" attrs="{'invisible':[('filter','not in',('draft','validated','ready_to_deliver'))]}"/>
						<field name="filter" invisible="1"/>
					</group>
					<notebook>
                        <page string="Mouvements">
                            <field name="line_ids" nolabel="1" attrs="{'readonly':[('type_action','=','total_cancellation')]}">
                                <tree string="Products" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_qty" />
                                    <field name="product_uom_id" invisible="1"/>
                                    <field name="location_id" invisible="1"/>
                                    <field name="location_dest_id" invisible="1"/>
									<field name="move_id" invisible="1"/>
									<field name="removal_id" invisible="1"/>
									<field name="opp_id" invisible="1"/>
                                </tree>
                            </field>
                            <div class="oe_clear"/>
                            <field name="note" placeholder="Ajouter une Remaque..." class="oe_inline"/>
                        </page>
					</notebook>

	              	<footer>
	                	<button name="create_removal_cancellation" string="Valider" type="object" class="oe_highlight"/>
	                	or
	                	<button string="Annuler" class="oe_link" special="cancel" />
	           		</footer>
	            </form>
	        </field>
		</record>

		<record model="ir.actions.act_window" id="action_stock_removal_cancellation_tree_view">
            <field name="name">Annulations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.removal.cancel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</openerp>
