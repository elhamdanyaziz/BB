        <record id="view_stock_normal_reservation_history_search" model="ir.ui.view">
            <field name="name">stock.normal.reservation.history.search</field>
            <field name="model">stock.normal.reservation.history</field>
            <field name="arch" type="xml">
                <search string="Analyse des Réservations sur Stock">
                    <field name="product_id"/>
                    <field name="location_id" filter_domain="[('location_id', 'child_of', self)]"/>
                    <field name="location_dest_id" filter_domain="[('location_id', 'child_of', self)]"/>
                    <field name="section_id" />
                    <field name="partner_id" />
                    <field name="state" />
                    <group expand="1" string="Group By">
                        <filter string="BU" icon="terp-accessories-archiver" context="{'group_by':'section_id'}" name='group_by_section'/>
                        <filter string="Client" icon="terp-accessories-archiver" context="{'group_by':'partner_id'}" name='group_by_partner'/>
                        <filter string="Article" icon="terp-accessories-archiver" context="{'group_by':'product_id'}" name='group_by_product'/>
                     </group>
                </search>
            </field>
        </record>

    </data>
</openerp>

