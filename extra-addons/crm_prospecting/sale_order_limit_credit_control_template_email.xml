<?xml version="1.0" ?>
<openerp>

    <data noupdate="1">

        <!--Email template -->
        <record id="email_template_control_limit_credit_sale" model="email.template">
            <field name="name">Controle de plafond - Envoi Émail</field>
            <field name="email_from">${(object.user_id.email or '')|safe}</field>
            <field name="subject">(Probléme du plafond du client ${object.partner_id.name})</field>
            <field name="partner_to"></field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_name">${(object.name or '').replace('/','_')}_${object.state == 'draft' and 'draft' or ''}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

    <p>Bonjour,</p>
    
    <p>Ce bon de commande à un probléme de plafond,merci d'inviter votre client ${object.partner_id.name} à régler sa situation auprés au service de recouvrement: </p>

    <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
       &nbsp;&nbsp;<strong>RÉFÉRENCES</strong><br />
       &nbsp;&nbsp;Numéro: <strong>${object.name}</strong><br />
       &nbsp;&nbsp;Montant total: <strong>${object.amount_total} ${object.pricelist_id.currency_id.name}</strong><br />
       &nbsp;&nbsp;Date:  ${format_tz(object.date_order, tz=user.tz, context={'lang':object.partner_id.lang})} <br />
       % if object.origin:
       &nbsp;&nbsp;Order reference: ${object.origin}<br />
       % endif
       % if object.user_id:
       &nbsp;&nbsp;Votre contact: <a href="mailto:${object.user_id.email or ''}?subject=Order%20${object.name}">${object.user_id.name}</a>
       % endif
    </p>

        <p></p>
    </div>
</div>
            ]]></field>
        </record>
    </data>
</openerp>
